<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <remove name="PythonHandler" />
      <add name="PythonHandler"
           path="*"
           verb="*"
           modules="FastCgiModule"
           scriptProcessor="C:\Users\user11\AppData\Local\Programs\Python\Python311\python.exe|C:\Users\user11\AppData\Local\Programs\Python\Python311\Lib\site-packages\wfastcgi.py"
           resourceType="Unspecified"
           requireAccess="Script" />
    </handlers>

    <defaultDocument enabled="true">
      <files>
        <clear />
        <add value="app.py" />
      </files>
    </defaultDocument>
  </system.webServer>

  <appSettings>
    <!-- Flask entry point -->
    <add key="WSGI_HANDLER" value="app.app" />
    
    <!-- Path to your app folder -->
    <add key="PYTHONPATH" value="C:\inetpub\wwwroot\video_translator_project\video-translator" />

    <!-- Optional: enable debug for troubleshooting -->
    <add key="WSGI_LOG" value="C:\inetpub\wwwroot\video_translator_project\video-translator\wfastcgi.log" />
  </appSettings>
</configuration>
